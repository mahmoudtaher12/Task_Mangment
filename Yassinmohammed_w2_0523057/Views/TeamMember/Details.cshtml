@model Yassinmohammed_w2_0523057.Models.Entites.TeamMember

@{
    ViewData["Title"] = "Details";
}

<h1>Team Member</h1>

<div>
    <h4> Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.role)
        </dd>
    </dl>
</div>

<div>
    <h4> Tasks</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Deadline</th>
                <th>Team Members</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Tasks)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.status</td>
                    <td>@item.priority</td>
                    <td>@item.Deadline</td>
                    <td>@item.TeamMembers.Name</td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-controller="TeamMember" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Delete" asp-controller="TeamMember" asp-route-id="@Model?.Id">delete</a> |
    <a asp-action="Index" asp-controller="Project">Back to List</a>
</div>
